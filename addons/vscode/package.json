{
  "name": "typst-preview",
  "displayName": "Typst Preview",
  "description": "preview your typst document in instant",
  "publisher": "mgt19937",
  "repository": {
    "type": "git",
    "url": "https://github.com/Enter-tainer/typst-preview-vscode"
  },
  "version": "0.1.11",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "languages": [
    {
      "id": "typst",
      "extensions": [
        ".typ"
      ]
    }
  ],
  "contributes": {
    "commands": [
      {
        "command": "typst-preview.preview",
        "title": "Typst Preview: Preview current file",
        "description": "Launch typst-ws server",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "typst-preview.preview",
          "when": "resourceLangId == typst",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Typst Preview",
      "properties": {
        "typst-ws.executable": {
          "type": "string",
          "default": "",
          "description": "Path to typst-ws executable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "package": "vsce package",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5",
    "@vscode/vsce": "^2.19.0"
  }
}
