{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "VS Code Extension Prelaunch",
			"dependsOn": [
				"Compile typst-dom",
				"Compile VS Code Extension",
				"Build Binary",
				"Copy Binary to VS Code Extension"
			],
			"dependsOrder": "sequence",
			"problemMatcher": []
		},
		{
			"label": "Compile typst-dom",
			"type": "npm",
			"script": "build",
			"path": "addons/typst-dom",
		},
		{
			"label": "Compile VS Code Extension",
			"type": "npm",
			"script": "build",
			"path": "addons/vscode",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build Binary",
			"type": "cargo",
			"command": "build",
			"args": [
				"--profile=rel_dev"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build"
		},
		{
			"label": "Copy Binary to VS Code Extension",
			"type": "shell",
			"windows": {
				"command": "cp",
				"args": [
					"${workspaceFolder}\\target\\rel_dev\\typst-preview.exe",
					"${workspaceFolder}\\addons\\vscode\\out\\"
				]
			},
			"linux": {
				"command": "cp",
				"args": [
					"${workspaceFolder}/target/rel_dev/typst-preview",
					"${workspaceFolder}/addons/vscode/out/"
				]
			},
			"osx": {
				"command": "cp",
				"args": [
					"${workspaceFolder}/target/rel_dev/typst-preview",
					"${workspaceFolder}/addons/vscode/out/"
				]
			}
		}
	]
}
